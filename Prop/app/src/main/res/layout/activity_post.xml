<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="il.ac.huji.prop.activities.PostActivity">


        <EditText
            android:id="@+id/post_text"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:inputType="text"
            android:gravity="top"
            android:outlineProvider="background"
            android:layout_gravity="center"
            android:hint="your post here, buddy"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp">

        <ImageView
            android:id="@+id/post_photo"
            android:src="@drawable/ic_camera_black_18dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"

            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/post_vid"
            android:src="@drawable/ic_video_black_18dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/post_file"
            android:src="@drawable/ic_attachment_black_18dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/post_location"
            android:src="@drawable/ic_map_marker_circle_black_18dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/post_choose_prop"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"

           android:text="Choose\nprop"/>
    </LinearLayout>


        <Button
            android:id="@+id/post_prop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
android:background="@color/orange"
            android:text="Prop!"/>

</LinearLayout>

